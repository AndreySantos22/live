algoritmo "Conversor"
// Função : Converter unidades
// Autor : Andrey Santos
// Data : 01/02/2023
// Seção de Declarações
var
i: real
opcao: inteiro
inicio
//Teste para aula 2 de "Git"
// Criado branch chamado "Dev"
// Criados 2 commits
i <- 0
repita
   escreval("Digite 1 para converter quilômetros em metros")
   escreval("Digite 2 para converter litros em metros cúbicos")
   escreval("Digite 3 para sair do programa")
   leia(opcao)
   se opcao = 1 entao
      escreval("")
      escreval("Digite o valor a ser convertido em metros")
      leia(i)
      escreval(i*1000)
      escreval("")
   senao
      se opcao = 2 entao
         escreval("")
         escreval("Digite o valor a ser convertido em metros cúbicos")
         leia(i)
         escreval(i/1000)
         escreval("")
         senao
      fimse
   fimse
ate opcao = 3
fimalgoritmo
